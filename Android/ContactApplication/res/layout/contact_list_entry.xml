<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView" android:layout_gravity="center" android:layout_margin="8dp"
            android:src="@android:drawable/ic_menu_gallery" android:scaleType="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Firstname Lastname"
                android:id="@+id/cl_name_view"
                android:layout_gravity="left|center_vertical"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textIsSelectable="false"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/cl_phone_view"
                android:layout_gravity="left|center_vertical"
                android:textColor="#838383"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:phoneNumber="false"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mail"
                android:id="@+id/cl_mail_view"
                android:layout_gravity="center|left"
                android:textColor="#838383"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                />
    </LinearLayout>
</LinearLayout>